@model List<CareSync.Models.Appointment>

@{
    ViewData["Title"] = "Manage Appointments";
}

<div class="container mt-4">
    <h2>Appointments</h2>
    <a class="btn btn-primary mb-3" asp-action="Create">Book New Appointment</a>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Patient ID</th>
                <th>Doctor ID</th>
                <th>Date</th>
                <th>Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appt in Model)
            {
                <tr>
                    <td>@appt.PatientID</td>
                    <td>@appt.DoctorID</td>
                    <td>@appt.AppointmentDate.ToShortDateString()</td>
                    <td>@appt.AppointmentTime</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@appt.AppointmentID" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@appt.AppointmentID" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@appt.AppointmentID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
