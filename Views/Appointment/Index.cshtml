@model List<CareSync.Models.ViewModels.AppointmentDisplayViewModel>




@{
    ViewData["Title"] = "Manage Appointments";
}

<div class="container mt-4">
    <h2>Appointments</h2>
    <a class="btn btn-primary mb-3" asp-action="Create">Book New Appointment</a>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Patient Name</th>
                <th>Doctor Name</th>
                <th>Date</th>
                <th>Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appt in Model)
            {
                <tr>
                    <td>@appt.PatientName</td>
                    <td>@appt.DoctorName</td>
                    <td>@appt.Date.ToString("yyyy-MM-dd")</td>
                    <td>@appt.Time</td>
                    <td>
                        <div style="display: flex; gap: 6px;">
                            <a asp-action="Edit" asp-route-id="@appt.AppointmentID" class="btn-edit btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@appt.AppointmentID" class="btn-details btn-sm">Details</a>
                            <a asp-action="Delete" asp-route-id="@appt.AppointmentID" class="btn-delete btn-sm">Delete</a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
